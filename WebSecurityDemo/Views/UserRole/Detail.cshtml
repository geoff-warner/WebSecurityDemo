@model IEnumerable<WebSecurityDemo.ViewModels.RoleVM>
@{
    ViewData["Title"] = "User Roles Detail";
}

<div class="row mt-5">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">User: @ViewBag.UserName</h5>
                @Html.ActionLink(
                "Assign Roles",
                                "Create",
                                new { userName = ViewBag.UserName },
                                new { @class = "btn btn-light btn-sm fw-semibold" })
            </div>

            <div class="card-body">

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info">
                        @TempData["Message"]
                    </div>
                }

                <table class="table table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Role Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoleName</td>
                                <td class="text-end">
                                <form asp-action="Delete" asp-controller="UserRole" method="post"
                                      style="display:inline;">
                                        <input type="hidden" name="userName" value="@ViewBag.UserName" />
                                    <input type="hidden" name="RoleName" value="@item.RoleName" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this user role?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
